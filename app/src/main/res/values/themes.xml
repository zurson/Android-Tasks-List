<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TasksList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TasksList" parent="Base.Theme.TasksList" />


    <style name="input_field_style" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:autoSizeMinTextSize">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/custom_input_field</item>
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="categories_spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:autoSizeMinTextSize">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:background">@drawable/bg_task_manager_spinner</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/black</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownHeight">10dp</item>
        <item name="android:popupBackground">@color/dropdown_background_color</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:autoSizeMinTextSize">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search_view_style" parent="Widget.AppCompat.SearchView">
        <item name="android:tint">@color/darker_gray</item>
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="background">@color/red</item>
    </style>

    <style name="filter_linear_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:background">@drawable/shape_filter_item</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="filter_text_view_style">
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:textSize">@dimen/filters_switch_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="filter_switch_style">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/buttons_color</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="task_manager_hint_text_style" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/task_manager_hint_text_size</item>
    </style>

    <style name="task_manager_input_field_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="boxStrokeColor">@color/task_manager_box_stroke_colors</item>
        <item name="hintTextColor">@color/task_manager_box_stroke_colors</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterOverflowTextColor">@color/red</item>
        <item name="android:padding">0dp</item>
        <item name="hintTextAppearance">@style/task_manager_hint_text_style</item>
    </style>

    <style name="task_manager_dropdown_field_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="boxStrokeColor">@color/task_manager_box_stroke_colors</item>
        <item name="hintTextColor">@color/task_manager_box_stroke_colors</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterOverflowTextColor">@color/red</item>
        <item name="hintTextAppearance">@style/task_manager_hint_text_style</item>
    </style>

    <style name="task_manager_categories_dropdown_style" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/red</item>
    </style>


</resources>